-#  This file is app/views/movies/find_movies_with_same_director.html.haml
%h1 Movies With Same Director

%table#movies
  %thead
    %tr
      %th#title_header Movie Title
      %th Rating
      %th#release_date_header Release Date
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)
        
= link_to 'Back to movie list', movies_path
